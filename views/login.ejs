<% layout('layouts/boilerplate_login') -%>

<body style="margin: 0; padding: 0; background: url('/css/imgs/BBACK.jpg') no-repeat center center fixed; background-size: cover;">
  <div class="container d-flex justify-content-center align-items-center min-vh-100 ">
    <div class="card shadow p-4" style="width: 100%; max-width: 400px; border-radius: 12px;">
      
        <h1 class="text-center mb-4 fw-bold">
          <span style="
            background: linear-gradient(90deg, #27a4fd, #3dc0fd, #9a2efd, #b121ef);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            display: inline-block;
            padding-bottom: 6px;
          ">
            Login to your account
          </span>
        </h1>
        <form action="/login" method="POST">
        <div class="mb-3">
          <label for="uEmail" class="form-label">Email</label>
          <input type="email" id="username" name="uEmail" class="form-control" required placeholder="Enter email" />
        </div>
        <div class="mb-3">
          <label for="uPass" class="form-label">Password</label>
          <input type="password" id="password" name="uPass" class="form-control" required placeholder="Enter password" />
        </div>
        <button type="submit" class="btn btn-primary w-100">Login</button>

        <!-- Move the Sign-Up link here -->
        <div class="text-center mt-3">
          <a href="/signup">Don't have an account? Sign up</a>
        </div>
      </form>
    </div>
  </div>
</body>



    
    