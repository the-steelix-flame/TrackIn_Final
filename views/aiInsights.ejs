<% layout('layouts/boilerplate_dash') -%>

    <body
        style="background: url('/css/imgs/BBACK.jpg') no-repeat center center fixed; background-size: cover; min-height: 100vh; padding-top: 3rem;">
        <br><br><br><br>
        <div class="container my-5">
            <h2 class="text-center mb-4 fw-bold text-info">üìä AI Analysis of Your Trades</h2>

            <% if (insights) { const sections=insights.split(/\d+\.\s+/).filter(s=> s.trim() !== "");
                %>
                <div class="bg-secondary p-4 rounded-4 shadow-lg">
                    <% sections.forEach((section, index)=> { %>
                        <div class="mb-5">
                            <h5 class="text-warning fw-semibold mb-3">
                                <%= `${index + 1}. ${section.split(":")[0].trim()}` %>
                            </h5>
                            <p class="text-light" style="white-space: pre-line;">
                                <%- section.substring(section.indexOf(":") + 1).trim() %>
                            </p>
                        </div>
                        <% }) %>
                </div>
                <a href="/users/<%= userId %>" class="btn btn-outline-info mt-4">
                    ‚¨ÖÔ∏è Back to Dashboard
                </a>
                <% } else { %>
                    <p class="text-center text-muted">No insights available at this time.</p>
                    <% } %>
        </div>
    </body>